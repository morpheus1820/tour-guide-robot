<!DOCTYPE robot PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">
<robot name="LiciniLLMServer" build="2" portprefix="/licini_chat" xmlns:xi="http://www.w3.org/2001/XInclude">
    <devices>
        <device name="liciniChat" type="GPTDevice">
            <param extern-name="licini_prompt_ctx" name="prompt_context">llmTest</param>
            <param extern-name="licini_prompt" name="prompt_file">licini_prompt.txt</param>
        </device>
        <device name="LLM_nws" type="LLM_nws_yarp">
            <param extern-name="LLMNwsYarp_name" name="name">
                /licini_chat/LLM_nws
            </param>
            <action phase="startup" level="5" type="attach">
                <paramlist name="networks">
                    <elem name="subdeviceLLM">
                        liciniChat
                    </elem>
                </paramlist>
            </action>
            <action phase="shutdown" level="5" type="detach" />
        </device>
    </devices>
</robot>
